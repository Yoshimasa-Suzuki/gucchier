<div class="container text-center text-white">  <!-- ログインするフォーム -->

  <div class="row" style="margin: 30px 0 80px;">
    <div class="col-md-12">
      <h2 style="font-size: 50px;">ログイン</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text-black" %>
        </div>

        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "text-black" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>


        <div class="actions" style="margin-bottom: 35px;">
          <%= f.submit "ログイン", class: "text-black", style: "font-size: 20px" %>
        </div>

      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
